{
  "compilerOptions": {
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "es2020",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop" : true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports" : true,
    "outDir": "./dist/server",
    "isolatedModules": true,
  },
  "include": ["./src/server"],
}